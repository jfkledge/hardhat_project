{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat", "hardhat-deploy"]
  },
  "include": ["hardhat.config.ts", "scripts", "deploy", "test", "typechain-types"],
  "exclude": ["node_modules"]
}
